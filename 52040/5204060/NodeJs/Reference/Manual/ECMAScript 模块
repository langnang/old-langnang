const e = new EventEmitter();
</code></pre> <div class="line-numbers-wrapper"><span class="line-number">1</span><br><span class="line-number">2</span><br></div></div><div class="language- line-numbers-mode"><pre class="language-text"><code>import { readFile } from 'fs';
readFile('./foo.txt', (err, source) =&gt; {
  if (err) {
    console.error(err);
